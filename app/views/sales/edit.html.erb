<h1>Edit Sale</h1>
<div class="mb-3">
  <!-- Delete Button -->
  <%= link_to "Delete Sale", account_sale_path(@account, @sale), method: :delete, data: { confirm: "Are you sure you want to delete this sale?" }, class: "btn btn-danger" %>
  <%= form_with(model: [@account, @sale], local: true) do |form| %>
</div>

<div class="mb-3">
  <%= form.label :product_id, "Product", class: "form-label" %>
  <%= form.collection_select :product_id, Product.order(:name), :id, :name, { include_blank: false }, class: "form-select" %>
</div>

<div class="mb-3">
  <%= form.label :quantity, "Quantity", class: "form-label" %>
  <%= form.number_field :quantity, class: "form-control", min: 0 %>
</div>

<div class="mb-3">
  <%= form.label :year, "Year", class: "form-label" %>
  <%= form.number_field :year, class: "form-control", min: 2000, max: Date.today.year %>
</div>

<div class="mb-3">
  <%= form.label :month, "Month", class: "form-label" %>
  <%= form.number_field :month, class: "form-control", min: 1, max: 12 %>
</div>

<div class="mb-3">
  <%= form.submit "Update Sale", class: "btn btn-primary" %>
  <%= link_to "Cancel", account_path(@account), class: "btn btn-secondary" %>
</div>
<% end %>