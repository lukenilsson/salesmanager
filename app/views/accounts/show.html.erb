<!-- app/views/accounts/show.html.erb -->

<h1><%= @account.name %></h1>

<div class="mb-3">
  <%= link_to "Edit Account", edit_account_path(@account), class: "btn btn-primary" %>
  <%= link_to "Export CSV", export_sales_account_path(@account, format: :csv), class: "btn btn-secondary" %>
</div>

<%= form_with url: account_path(@account), method: :get, local: true, class: "row g-3 mb-4 align-items-end" do |form| %>
<div class="col-auto">
  <%= form.label :product_id, "Product", class: "form-label" %>
  <%= form.collection_select :product_id, @products, :id, :name, { include_blank: true }, class: "form-select" %>
</div>
<div class="col-auto">
  <%= form.label :quantity_threshold, "Min Quantity", class: "form-label" %>
  <%= form.number_field :quantity_threshold, value: params[:quantity_threshold], class: "form-control" %>
</div>
<div class="col-auto">
  <%= form.label :year, "Year", class: "form-label" %>
  <%= form.text_field :year, value: params[:year], class: "form-control" %>
</div>
<div class="col-auto">
  <%= form.label :month, "Month", class: "form-label" %>
  <%= form.text_field :month, value: params[:month], class: "form-control" %>
</div>
<div class="col-auto">
  <%= form.submit "Filter", class: "btn btn-primary" %>
</div>
<% end %>

<!-- Sales Table -->
<table class="table table-striped">
  <thead>
    <tr>
      <!-- All sortable columns now use the sortable helper -->
      <th><%= sortable "product_id", "Product" %></th>
      <th><%= sortable "quantity", "Quantity" %></th>
      <th><%= sortable "year", "Year" %></th>
      <th><%= sortable "month", "Month" %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
    <tr>
      <td><%= link_to sale.product.name, product_path(sale.product), class: "text-primary" %></td>
      <td><%= sale.quantity %></td>
      <td><%= sale.year %></td>
      <td><%= sale.month %></td>
      <td>
        <%= link_to "Edit", edit_account_sale_path(@account, sale), class: "btn btn-sm btn-warning" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <img src="<%= asset_path('HPlogo.png') %>" alt="Company Logo" style="max-height: 100px;">
</div>